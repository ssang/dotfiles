#!/usr/bin/env bash

DOTFILES=$(cd $(dirname "${BASH_SOURCE[0]}") && pwd)

rm -rf $HOME/.dotfiles
ln -s $DOTFILES $HOME/.dotfiles

rm -rf $HOME/.tmux.conf
ln -s $DOTFILES/tmux/tmux.conf $HOME/.tmux.conf

rm -rf $HOME/.config/starship.toml
ln -s $DOTFILES/starship/starship.toml $HOME/.config/starship.toml

rm -rf $HOME/.wezterm
rm -rf $HOME/.wezterm.lua
ln -s $DOTFILES/wezterm/files $HOME/.wezterm
ln -s $DOTFILES/wezterm/.wezterm.lua $HOME/.wezterm.lua

mkdir -p $HOME/.local/bin

rm -rf $HOME/.local/bin/t
ln -s $DOTFILES/scripts/t $HOME/.local/bin/t

rm -rf $HOME/.config/nvim
ln -s $DOTFILES/nvim $HOME/.config/nvim

rm -rf $HOME/.zshrc
ln -s $DOTFILES/zsh/.zshrc $HOME/.zshrc

rm -rf $HOME/.zsh_aliases
rm -rf $HOME/.oh-my-zsh/themes
ln -s $DOTFILES/zsh/.zsh_aliases $HOME/.zsh_aliases
ln -s $DOTFILES/zsh/themes $HOME/.oh-my-zsh/themes
